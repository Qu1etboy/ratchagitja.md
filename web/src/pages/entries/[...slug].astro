---
import { CollectionEntry, getCollection } from 'astro:content';
import RatchagitjaEntry from '../../layouts/RatchagitjaEntry.astro';

export async function getStaticPaths() {
	const posts = (await getCollection('ratchagitja'))

	return posts.map((post) => {
    return ({
      params: { slug: post.slug },
      props: post,
    })
  });
}
type Props = CollectionEntry<'ratchagitja'>;

const post = Astro.props;
const { Content } = await post.render();
---

<RatchagitjaEntry {...post.data}>
	<Content />
</RatchagitjaEntry>
